# =========================
# IDENTIDADE DA INSTÂNCIA
# =========================
SERVER_NAME=evolution_INSTANCE_NAME
SERVER_TYPE=http
SERVER_PORT=8080
SERVER_URL=http://HOST:PORT

# =========================
# SSL (opcional)
# =========================
SSL_CONF_PRIVKEY=/path/to/cert.key
SSL_CONF_FULLCHAIN=/path/to/cert.crt

SENTRY_DSN=

# =========================
# TELEMETRIA / METRICS
# =========================
TELEMETRY_ENABLED=true
TELEMETRY_URL=

PROMETHEUS_METRICS=false
METRICS_AUTH_REQUIRED=true
METRICS_USER=prometheus
METRICS_PASSWORD=CHANGE_ME
METRICS_ALLOWED_IPS=127.0.0.1

# =========================
# PROXY (opcional)
# =========================
PROXY_HOST=
PROXY_PORT=
PROXY_PROTOCOL=
PROXY_USERNAME=
PROXY_PASSWORD=

# =========================
# AUDIO API (opcional)
# =========================
API_AUDIO_CONVERTER=
API_AUDIO_CONVERTER_KEY=

# =========================
# CORS
# =========================
CORS_ORIGIN=*
CORS_METHODS=GET,POST,PUT,DELETE
CORS_CREDENTIALS=true

# =========================
# LOGS
# =========================
LOG_LEVEL=ERROR,WARN,DEBUG,INFO,LOG,VERBOSE,DARK,WEBHOOKS,WEBSOCKET
LOG_COLOR=true
LOG_BAILEYS=error

EVENT_EMITTER_MAX_LISTENERS=50
DEL_INSTANCE=false

# =========================
# DATABASE
# =========================

POSTGRES_USER=DB_USER
POSTGRES_PASSWORD=DB_PASSWORD
POSTGRES_DB=DB_NAME

DATABASE_PROVIDER=postgresql
DATABASE_CONNECTION_URI=postgresql://DB_USER:DB_PASSWORD@DB_HOST:5432/DB_NAME
DATABASE_CONNECTION_CLIENT_NAME=evolution_exchange_INSTANCE

DATABASE_SAVE_DATA_INSTANCE=true
DATABASE_SAVE_DATA_NEW_MESSAGE=true
DATABASE_SAVE_MESSAGE_UPDATE=true
DATABASE_SAVE_DATA_CONTACTS=true
DATABASE_SAVE_DATA_CHATS=false
DATABASE_SAVE_DATA_LABELS=false
DATABASE_SAVE_DATA_HISTORIC=false
DATABASE_SAVE_IS_ON_WHATSAPP=true
DATABASE_SAVE_IS_ON_WHATSAPP_DAYS=7
DATABASE_DELETE_MESSAGE=true

# =========================
# BROKERS / SOCKETS
# =========================
RABBITMQ_ENABLED=false
SQS_ENABLED=false
WEBSOCKET_ENABLED=false
PUSHER_ENABLED=false
KAFKA_ENABLED=false

# =========================
# META (WhatsApp Business)
# =========================
WA_BUSINESS_TOKEN_WEBHOOK=evolution
WA_BUSINESS_URL=https://graph.facebook.com
WA_BUSINESS_VERSION=v20.0
WA_BUSINESS_LANGUAGE=en_US

WEBHOOK_GLOBAL_ENABLED=false

# =========================
# SESSÃO
# =========================
CONFIG_SESSION_PHONE_CLIENT=Auto Mensagens
CONFIG_SESSION_PHONE_NAME=Edge

# =========================
# QR CODE
# =========================
QRCODE_LIMIT=3
QRCODE_COLOR='#175197'

# =========================
# INTEGRAÇÕES
# =========================
TYPEBOT_ENABLED=false
CHATWOOT_ENABLED=false
OPENAI_ENABLED=false
DIFY_ENABLED=false
N8N_ENABLED=false
EVOAI_ENABLED=false

# =========================
# CACHE
# =========================
CACHE_REDIS_ENABLED=false
CACHE_LOCAL_ENABLED=false

# =========================
# STORAGE
# =========================
S3_ENABLED=false

# =========================
# AUTH
# =========================
AUTHENTICATION_API_KEY=CHANGE_ME_API_KEY
AUTHENTICATION_EXPOSE_IN_FETCH_INSTANCES=true

LANGUAGE=en
